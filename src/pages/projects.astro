---
import Layout from '@/layouts/Layout.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import ArrowRigth from '@/components/icons/ArrowRigth.astro'
import ProjectsCard from '@/components/ProjectsCard.astro'

const PROJECTS = [
  {
    title: 'Disney+ Clone',
    description:
      'Clon de la interfaz gráfica de la plataforma Disney+ hecho con React y Tailwind CSS. Incluye sistema de búsqueda con TMDb API con la que se obtiene los datos e imagenes de las películas.',
    link: 'https://disney-clone-mcfrostys.vercel.app/',
    github: 'https://github.com/McFrostyS/disney-clone',
    image: '/projects/disney-clone.webp',
    skills: ['React', 'Tailwind CSS']
  },
  {
    title: 'Spotify Astro',
    description:
      'Clon del reproductor de música Spotify con Astro, React, Svelte y Tailwind CSS. Animaciones, reproducción de canciones, listas de reproducción y control del nivel de volumen.',
    link: 'https://spotify-astro-mcfrostys.vercel.app/',
    github: 'https://github.com/McFrostyS/spotify-astro',
    image: '/projects/spotify-astro.webp',
    skills: ['Astro', 'React', 'Svelte', 'TypeScript', 'Tailwind CSS']
  }
]
---

<Layout title='Projects' description='Proyectos de Sergio'>
  <main class='px-4'>
    <SectionContainer id='projects' class='my-10 md:my-24'>
      <section class='grid grid-cols-1 md:grid-cols-2 gap-8'>
        <header class='p-4 row-span-1 md:row-span-1'>
          <div class='group'>
            <a
              href='/'
              class='font-bold transition duration-400 text-white group-hover:text-teal-200'
            >
              <span style='display: inline-block; transform: scaleX(-1);'>
                <ArrowRigth />
              </span>
              Sergio Aguado
            </a>
          </div>
          <h1 class='text-5xl font-bold text-white'>Proyectos</h1>
          <p class='text-white'>
            Aquí encontrarás todos los proyectos en los que he trabajado a lo largo de mi
            carrera profesional y personal como desarrollador.
          </p>
        </header>
        <div class='row-span-1 md:row-span-2 max-h-[520px]'>
          <ProjectsCard
            title={PROJECTS[1].title}
            description={PROJECTS[1].description}
            link={PROJECTS[1].link}
            github={PROJECTS[1].github}
            image={PROJECTS[1].image}
            skills={PROJECTS[1].skills}
          />
        </div>
        <div class='row-span-1 md:row-span-2 max-h-[520px] pt-14'>
          <ProjectsCard
            title={PROJECTS[0].title}
            description={PROJECTS[0].description}
            link={PROJECTS[0].link}
            github={PROJECTS[0].github}
            image={PROJECTS[0].image}
            skills={PROJECTS[0].skills}
          />
        </div>
        <div class='row-span-1 md:row-span-2 max-h-[520px]'>
          <ProjectsCard
            title={PROJECTS[1].title}
            description={PROJECTS[1].description}
            link={PROJECTS[1].link}
            github={PROJECTS[1].github}
            image={PROJECTS[1].image}
            skills={PROJECTS[1].skills}
          />
        </div>
        <div class='row-span-1 md:row-span-2 max-h-[520px]'>
          <ProjectsCard
            title={PROJECTS[0].title}
            description={PROJECTS[0].description}
            link={PROJECTS[0].link}
            github={PROJECTS[0].github}
            image={PROJECTS[0].image}
            skills={PROJECTS[0].skills}
          />
        </div>
        <!-- Agrega más tarjetas según sea necesario -->
      </section>
    </SectionContainer>
  </main>
</Layout>
